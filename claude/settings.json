{
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": ["Working"]
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(systemctl *)",
      "Bash(rclone bisync *)",
      "Bash(lsblk *)",
      "Bash(cat *)",
      "Bash(chmod *)",
      "Bash(nixfmt *)",
      "Bash(curl *)",
      "Bash(nix-rebuild-home *)",
      "Bash(nix-rebuild-system *)",
      "Bash(nix-rebuild-all *)",
      "Bash(nix-upgrade-all *)"
    ],
    "defaultMode": "default"
  },
  "promptSuggestionEnabled": false,
  "enableAllProjectMcpServers": false,
  "outputStyle": "default",
  "spinnerTipsEnabled": false,
  "enabledPlugins": {
    "kotlin-lsp@claude-plugins-official": true
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline@latest --style=powerline --theme=nord"
  }
}
